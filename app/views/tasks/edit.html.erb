<h1>Редактирование задачи</h1>

<%= form_for @task do |f| %>
     <p>	
	<%= f.label :title, "Название" %><br>
	<%= f.text_field :title %><br>
     </p>

     <p>	
	<%= f.label :text, "Описание" %><br>
	<%= f.text_field :text %><br>
     </p>
      <p>	
	<%= f.label :number, "Номер" %><br>
	<%= f.text_field :number %><br>
     </p>
      <p>	
	<%= f.submit "Сохранить" %>
	 
     </p>

 <% end %>
<% if @number %>
<%= form_for @number do |f| %>
     <p>	
	<%= f.label :name, "Название" %><br>
	<%= f.text_field :name %><br>
     </p>

      <p>	
	<%= f.submit "Сохранить" %>
	 
     </p>

 <% end %>
 <% end %>

